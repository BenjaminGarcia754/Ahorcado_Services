<UserControl x:Class="AhorcadoPresentation.Aplicacion.Vistas.HistorialPuntos"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AhorcadoPresentation.Aplicacion.Vistas"
             xmlns:resources="clr-namespace:AhorcadoPresentation.RecursosLocalizables"
             mc:Ignorable="d" d:DesignWidth="600" Height="213">
    <Border Margin="0,10,0,0" Height="200" Width="600" Style="{StaticResource ComponentePartidaNueva}">
        <Grid Margin="0,0,0,-10">
            <Label Foreground="White" FontSize="20" Content="{resources:Resx Key=GuiHistorialPuntosLbFechaDePartida}" HorizontalAlignment="Left" Margin="10,32,0,0" VerticalAlignment="Top" Height="37" Width="176"/>
            <Label Foreground="White" FontSize="18" Content="{resources:Resx Key=GuiHistorialPuntosLbUsuarioContrincante}" HorizontalAlignment="Left" Margin="10,69,0,0" VerticalAlignment="Top" Height="37" Width="216"/>
            <Label Foreground="White" FontSize="20" Content="{resources:Resx Key=GuiHistorialPuntosLbPalabra}" HorizontalAlignment="Left" Margin="10,106,0,0" VerticalAlignment="Top" Height="37" Width="176"/>
            <Label Foreground="White" FontSize="20" Content="{resources:Resx Key=GuiHistorialPuntosLbPuntaje}" HorizontalAlignment="Left" Margin="10,148,0,0" VerticalAlignment="Top" Height="37" Width="176"/>
            <Label x:Name="lFechaPartida"  Foreground="White" FontSize="20" Content="dd/MM/YYYY" HorizontalAlignment="Left" Margin="298,32,0,0" VerticalAlignment="Top" Height="37" Width="176"/>
            <Label x:Name="lUsuarioContrincante" Foreground="White" FontSize="18" Content="Username" HorizontalAlignment="Left" Margin="298,69,0,0" VerticalAlignment="Top" Height="37" Width="216"/>
            <Label x:Name="lPalabraPartida" Foreground="White" FontSize="20" Content="Palabra" HorizontalAlignment="Left" Margin="298,106,0,0" VerticalAlignment="Top" Height="37" Width="176"/>
            <Label x:Name="lPuntaje" Foreground="White" FontSize="20" Content="10 Puntos" HorizontalAlignment="Left" Margin="298,148,0,0" VerticalAlignment="Top" Height="37" Width="176"/>

        </Grid>
    </Border>
</UserControl>
