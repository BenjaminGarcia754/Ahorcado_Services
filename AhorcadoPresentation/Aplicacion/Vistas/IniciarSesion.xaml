            <TextBlock Foreground="White" FontSize="26" HorizontalAlignment="Left" Margin="409,474,0,0" TextWrapping="Wrap" Text="Contraseña" VerticalAlignment="Top"/>
            <TextBox Style="{StaticResource TexBoxInicioSesion}" HorizontalAlignment="Left" Margin="409,365,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="541" Height="50" TextChanged="TextBox_TextChanged"/>
            <Button Content="Registrarse" HorizontalAlignment="Left" Margin="641,672,0,0" VerticalAlignment="Top" Height="25" Width="90"/>
            <Button Content="Iniciar Sesión" HorizontalAlignment="Left" FontSize="17" Margin="633,603,0,0" VerticalAlignment="Top" Height="38" Width="105"/>
            <PasswordBox Style="{StaticResource}" HorizontalAlignment="Left"  Margin="409,537,0,0" VerticalAlignment="Top" Width="541" Height="37"/>

        </Grid>
    </Border>
</UserControl>
