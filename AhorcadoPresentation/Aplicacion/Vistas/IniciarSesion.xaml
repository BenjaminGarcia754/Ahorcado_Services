<UserControl x:Class="AhorcadoPresentation.Aplicacion.Vistas.IniciarSesion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AhorcadoPresentation.Aplicacion.Vistas"
             mc:Ignorable="d" 
             d:DesignHeight="832" d:DesignWidth="1280">
    <Border Background="White"  BorderBrush="White" BorderThickness="1" CornerRadius="30">
        <Grid >
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="414*"/>
            </Grid.RowDefinitions>
            <Image  HorizontalAlignment="Center" Height="832" VerticalAlignment="Center" Width="1280" Source="/Aplicacion/Resources/InicioSesionImagen.png" Grid.Row="1" />
            <TextBlock Foreground="White" FontSize="26" HorizontalAlignment="Left" Margin="409,270,0,0" TextWrapping="Wrap" Text="Correo eléctronico" VerticalAlignment="Top" Grid.Row="1"/>
            <TextBlock Foreground="White" FontSize="26" HorizontalAlignment="Left" Margin="409,437,0,0" TextWrapping="Wrap" Text="Contraseña" VerticalAlignment="Top" Grid.Row="1"/>
            <TextBox x:Name="TbCorreo" Style="{StaticResource TexBoxInicioSesion}" HorizontalAlignment="Left" Margin="442,333,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="476" Height="50" Grid.Row="1"/>
            <Button Content="Registrarse" Style="{StaticResource ImageButtonStyle}"  HorizontalAlignment="Left" Margin="641,670,0,0" VerticalAlignment="Top" Height="25" Width="90" Grid.Row="1" Click="ClickRegistrarse"/>
            <Button Content="Iniciar Sesión" Style="{StaticResource ImageButtonStyle}" HorizontalAlignment="Left" FontSize="17" Margin="627,576,0,0" VerticalAlignment="Top" Height="43" Width="124" Grid.Row="1" Click="ClickIniciarSesion"/>
            <PasswordBox x:Name="PfContrasenia" Style="{StaticResource PasswordBoxInicioSesion}" HorizontalAlignment="Left"  Margin="442,493,0,0" VerticalAlignment="Top" Width="476" Height="50" Grid.Row="1"/>

        </Grid>
    </Border>
</UserControl>
