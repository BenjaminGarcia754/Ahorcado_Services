<UserControl x:Class="AhorcadoPresentation.Aplicacion.Vistas.IniciarSesion"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AhorcadoPresentation.Aplicacion.Vistas"
             mc:Ignorable="d" 
             d:DesignHeight="832" d:DesignWidth="1280">
    <Border Background="White"  BorderBrush="White" BorderThickness="1" CornerRadius="30">
        <Grid >
            <Image  HorizontalAlignment="Left" Height="832" Margin="0,0,0,0" VerticalAlignment="Top" Width="1280" Source="/Aplicacion/Resources/InicioSesionImagen.png" />
