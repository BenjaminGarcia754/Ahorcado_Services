  </ItemGroup>

  <ItemGroup>
    <EmbeddedResource Update="Recursos Localizables\StringResources.en-US.resx">
      <Generator>ResXFileCodeGenerator</Generator>
    </EmbeddedResource>
    <EmbeddedResource Update="Recursos Localizables\StringResources.es-ES.resx">
      <Generator>ResXFileCodeGenerator</Generator>
    </EmbeddedResource>
  </ItemGroup>


</Project>
