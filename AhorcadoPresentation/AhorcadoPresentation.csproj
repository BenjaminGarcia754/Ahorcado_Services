    <Resource Include="Aplicacion\Resources\ButtonBackgroundMenu.png">
      <CopyToOutputDirectory>Never</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Aplicacion\Resources\Fuentes\Inika-Regular.ttf">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Aplicacion\Resources\Fuentes\Inter-Regular.ttf">
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </Resource>
    <Resource Include="Aplicacion\Resources\InicioSesionImagen.png">
