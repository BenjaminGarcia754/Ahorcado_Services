<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <OutputType>WinExe</OutputType>
    <TargetFramework>net8.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <UseWPF>true</UseWPF>
  </PropertyGroup>

  <ItemGroup>
    <None Remove="Aplicacion\Resources\BotonSVG.svg" />
    <None Remove="Aplicacion\Resources\ButtonBackgroundLogin.png" />
    <None Remove="Aplicacion\Resources\ButtonBackgroundMenu.png" />
    <None Remove="Aplicacion\Resources\CrearPartidaBackground.png" />
    <None Remove="Aplicacion\Resources\ImagenInicioSesion.png" />
    <None Remove="Aplicacion\Resources\InicioSesionImagen.png" />
